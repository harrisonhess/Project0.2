@model IEnumerable<Project0._2.Models.Opportunity>

@{
    ViewData["Title"] = "OpportunityList";
}

<h1 class="text-center">Volunteer Opportunities</h1>

<p>
    <a asp-action="CreateOpportunity">Create New Opportunity</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Center)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Center)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditOpportunity", new { id=item.id }) |
                @Html.ActionLink("Details", "OpportunityDetails", new { id=item.id }) |
                @Html.ActionLink("Delete", "DeleteOpportunity", new { id=item.id })
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Admin" asp-action="Index">Back to Manager</a>
</div>